FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{

    inlet
    {
        type            fixedValue;
        value uniform (0.5 0 0);
        //type            zeroGradient;
    }

    outlet
    {
        type            zeroGradient;
    }

    floor
    {
        type            fixedValue;
        value uniform (0 0 0);
    }

   membrane
    {
        type            movingWallVelocity;
        value           uniform (0 0 0);
        //type              noSlip;
    }

    bottom
    {
        type            fixedValue;
        value uniform (0 0 0);
    }

    frontAndBackPlanes
    {
        type            empty;
    }
}

// ************************************************************************* //
