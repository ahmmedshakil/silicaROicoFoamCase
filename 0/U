FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{

    inlet
    {
        type            fixedValue;
        value uniform (0.5 0 0);
        //type            zeroGradient;
    }

    outlet
    {
        type            zeroGradient;
    }

    floor
    {
        type            fixedValue;
        value uniform (0 0 0);
    }

   membrane
    {
        //type            movingWallVelocity;
        //value           uniform (0 -0.000014 0);
        //type              noSlip;
        //type            movingWallVelocity;
        //value           uniform (0 -0.000014 0);

        type            groovyBC;
        //valueExpression "vector(0, -p/10000000, 0)";
        valueExpression "vector(0, -Lp * (Ptm - osmotic_coefficient*C_salt), 0)";
        value           uniform (0 0 0);
        variables       "osmotic_coefficient=0.4;Lp=3.9e-11;Ptm=(p-100000*p/p);C_salt=(C_Na + C_Cl + C_Sitot + C_SiO2);";
    }

    bottom
    {
        //type            movingWallVelocity;
        //value uniform (0 0 0);
        type            movingWallVelocity;
        value uniform (0 0 0);
    }

    frontSide
    {
        type zeroGradient;
    }

    backSide
    {
        type zeroGradient;
    }

    //frontAndBackPlanes
    //{
    //    type            empty;
    //}
}

