FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      C_SiO2;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 -3 0 0 1 0 0];

internalField   uniform 0.5;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 0.5;
    }

    outlet
    {
        type            zeroGradient;
    }

    floor
    {
        type            zeroGradient;
    }

   membrane
    {
        type            groovyBC;
        valueExpression "C*(vw*deltay/D + 1)"; //"C*D/(D-vw*deltay)";
        value           $internalField;
        variables       "C=internalField(C_SiO2);vw=mag(U&normal());D=D_SiO2;deltay=mag(delta());";
    }

    bottom
    {
        type        zeroGradient;
    }

    frontSide
    {
        type zeroGradient;
    }

    backSide
    {
        type zeroGradient;
    }

    //frontAndBackPlanes
    //{
    //    type            empty;
    //}
}

// ************************************************************************* //
