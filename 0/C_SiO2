FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      C_SiO2;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 -3 0 0 1 0 0];

initConc        0.01;
internalField   uniform $initConc;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform $initConc;
    }

    outlet
    {
        type            zeroGradient;
    }

    top
    {
        type            zeroGradient;
    }

   membrane
    {
        type            zeroGradient;
        //type            groovyBC;
        //valueExpression "time()<0.1 ? $initConc : Cwall"; //"C*D/(D-vw*deltay)";
        //value           $internalField;
        //variables       "C=internalField(C_SiO2);vw=mag(U&normal());D=D_SiO2;deltay=mag(delta());Cwall=C*(vw*deltay/D + 1);";
    }

    bottom
    {
        type        zeroGradient;
    }

    frontside
    {
        type cyclicAMI;//zeroGradient;
    }

    backside
    {
        type cyclicAMI;//zeroGradient;
    }

    spacer
    {
        type zeroGradient;
    }


    //frontAndBackPlanes
    //{
    //    type            empty;
    //}
}

