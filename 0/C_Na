FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      C_Na;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 -3 0 0 1 0 0];

initConc        100;
internalField   uniform $initConc;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 100;
    }

    outlet
    {
        type            zeroGradient;
    }

    floor
    {
        type            zeroGradient;
    }

   membrane
    {
        type            groovyBC;
        valueExpression "time()<0.1 ? $initConc : Cwall"; //"C*D/(D-vw*deltay)";
        value           $internalField;
        variables       "C=internalField(C_Na);vw=mag(U&normal());D=D_Na;deltay=mag(delta());Cwall=C*(vw*deltay/D + 1);";
    }

    bottom
    {
        type        zeroGradient;
    }

    frontSide
    {
        type zeroGradient;
    }

    backSide
    {
        type zeroGradient;
    }

    //frontAndBackPlanes
    //{
    //    type            empty;
    //}
}

// ************************************************************************* //
