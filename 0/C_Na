FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      C_Na;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 -3 0 0 1 0 0];

internalField   uniform 100;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 100;
    }

    outlet
    {
        type            zeroGradient;
    }

    floor
    {
        type            zeroGradient;
    }

   membrane
    {
        type            groovyBC;
        valueExpression "C*(vw*deltay/D + 1)"; //"C*D/(D-vw*deltay)";
        value           $internalField;
        variables       "C=internalField(C_Na);vw=mag(U&normal());D=D_Na;deltay=mag(delta());";
    }

    bottom
    {
        type        zeroGradient;
    }

    frontAndBackPlanes
    {
        type            empty;
    }
}

// ************************************************************************* //
