FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

initP           400000;
finalP          1700000;

internalField   uniform $finalP;

boundaryField
{
    inlet
    {
        type            zeroGradient;
    }

    outlet
    {
        //type            totalPressure;
        //rho             none;
        //p0              uniform 0;
        //value           uniform 0;
        type            groovyBC;
        valueExpression  "time()<0.1 ? ($finalP - $initP)*time()/0.1 + $initP : $finalP";
        value           uniform $finalP;
    }

    floor
    {
        type            zeroGradient;
    }

   membrane
    {
        type            zeroGradient;
    }

    bottom
    {
        type        zeroGradient;
    }

    frontSide
    {
        type zeroGradient;
    }

    backSide
    {
        type zeroGradient;
    }

    //frontAndBackPlanes
    //{
    //    type            empty;
    //}
}

