solvers
{
    p
    {
        solver          PBiCGStab;
        preconditioner  DIC;
        tolerance       1e-04;
        relTol          0;
    }
    
    pFinal
    {
        $p;
        relTol          0;
    }
    
    U
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-04;
        relTol          0;
    }

    "cellDisplacement.*"
    {
        solver          GAMG;
        tolerance       1e-08;
        relTol          0;
        smoother        GaussSeidel;
    }

    "(cellMotionU|cellMotionUz)"
    {
        $p;
        tolerance       1e-08;
        relTol          0;
    }

    C_Sitot
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-5;
        relTol          0.1;
    }

    C_SiO2
